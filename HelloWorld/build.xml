<project name="HelloWorld" default="compile" basedir=".">
 <!-- ANT will start execution from here by finding target "compile"  -->
 <target name="compile" depends="clean">
  <!-- Java compile parameters here  -->
  <javac debug="true" debuglevel="lines,vars,source" srcdir="src" destdir="bin" classpath="C:/Users/Kiran/.p2/pool/plugins/org.junit_4.12.0.v201504281640/junit.jar"/>
 	
 	
